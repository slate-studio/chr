#= require jquery
#= require jquery_ujs

#= require chr
#= require loft
#= require ants

@getConfig = (data) ->
  modules =
    loft: new Loft()
    settings:
      items:
        admins:    new AntsAdminUsers()
        redirects: new AntsRedirects()

  return { modules: modules }

$ ->
  $.get '/admin/bootstrap.json', (response) ->
    config = getConfig(response)

    chr.start('<%= app_name %>', config)
    new AntsProfile()
